rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Users metadata doc (role routing)
    match /users/{uid} {
      allow read, write: if isSelf(uid);
    }

    // Patient profile
    match /patients/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Provider profiles
    match /providers_doctors/{uid} { // legacy collection (kept for backward compat)
      allow read, write: if isSelf(uid);
    }

    // New clinic collection replacing providers_doctors
    match /providers_clinics/{uid} {
      allow read, write: if isSelf(uid);
    }

    match /providers_diagnostic_centers/{uid} {
      allow read, write: if isSelf(uid);
    }

    match /providers_pharmacies/{uid} {
      allow read, write: if isSelf(uid);
    }

    match /providers_delivery_agents/{uid} {
      allow read, write: if isSelf(uid);
    }

    // New provider categories
    match /providers_therapies/{uid} {
      allow read, write: if isSelf(uid);
    }

    match /providers_others/{uid} {
      allow read, write: if isSelf(uid);
    }

    // Patient-owned resources used by dashboard
    match /patient_carts/{uid} {
      allow read, write: if isSelf(uid);
    }

    match /patient_lab_tests/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /patient_reports/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
